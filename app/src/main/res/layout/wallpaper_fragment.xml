<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#1d1d1d" android:weightSum="10">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:weightSum="10">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/emptyPlace_imageButton"
            android:layout_weight="2"
            android:background="@drawable/abc_btn_borderless_material" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/leftView_imageButton"
            android:layout_weight="8"
            android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:background="@drawable/abc_btn_rating_star_off_mtrl_alpha" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:weightSum="10">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/cancel_imageButton"
            android:layout_weight="2"
            android:background="@drawable/abc_ic_clear_mtrl_alpha" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/rightView_imageButton"
            android:layout_weight="8"
            android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha" />
    </LinearLayout>
</LinearLayout>